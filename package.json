{
  "name": "rescript-struct",
  "version": "4.0.0",
  "description": "Safely parse and serialize with transformation to convenient ReScript data structures",
  "keywords": [
    "ReScript",
    "Struct",
    "JSON",
    "Schema",
    "Typesafe",
    "Parse",
    "Serialize",
    "Encode",
    "Decode",
    "Validation",
    "Transform",
    "Migration",
    "Contract",
    "Mapping",
    "Jzon",
    "Zod",
    "Superstruct",
    "Runtypes",
    "Ajv"
  ],
  "homepage": "https://github.com/DZakh/rescript-struct#readme",
  "bugs": {
    "url": "https://github.com/DZakh/rescript-struct/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DZakh/rescript-struct.git"
  },
  "license": "MIT",
  "author": "Dmitry Zakharov <dzakh.dev@gmail.com>",
  "files": [
    "dist",
    "src/S.res",
    "src/S.resi",
    "src/S_JsApi.d.ts",
    "RescriptStruct.gen.ts",
    "bsconfig.json"
  ],
  "main": "./dist/S.js",
  "module": "./dist/S.mjs",
  "types": "./src/S_JsApi.d.ts",
  "scripts": {
    "bundle": "rollup --config",
    "build": "npm run res:build && npm run bundle",
    "res:build": "rescript build -with-deps",
    "res:dev": "rescript build -with-deps -w",
    "test": "ava",
    "coverage": "c8 --reporter=lcov npm test",
    "benchmark": "node ./benchmark/Benchmark.bs.js"
  },
  "ava": {
    "files": [
      "__tests__/**/*_test.bs.js",
      "__tests__/**/*_test.ts"
    ],
    "extensions": [
      "ts",
      "js"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "devDependencies": {
    "@dzakh/rescript-ava": "github:DZakh/rescript-ava#ec0937b019c2a4fe92988fd698b23126bf30c734",
    "@rollup/plugin-commonjs": "23.0.3",
    "@ryyppy/rescript-promise": "2.1.0",
    "ava": "5.2.0",
    "benchmark": "2.1.4",
    "c8": "7.12.0",
    "rescript": "11.0.0-alpha.3",
    "rollup": "3.5.1",
    "ts-expect": "1.3.0",
    "ts-node": "10.9.1",
    "typescript": "4.9.3"
  },
  "peerDependencies": {
    "rescript": "11.0.0-alpha.3"
  }
}
